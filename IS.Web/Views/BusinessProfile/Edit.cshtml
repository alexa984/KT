@model IS.Web.ViewModels.BusinessProfileViewModels.BusinessProfileViewModel
@{
    ViewBag.Title = "Редактиране";
}

<h2>@ViewBag.Title</h2>

    @Styles.Render("~/Content/editBusiness.css")
@using (Html.BeginForm("Edit", "BusinessProfile", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>Редактиране на профила.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Image, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">

            <input type="file" name="businessProfile" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" />

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FirmName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirmName, new { @class = "form-control", placeholder = "..." })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "..." })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Telephone, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Telephone, new { @class = "form-control", placeholder = "..." })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Type, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(m => m.Type, new { @class = "form-control", placeholder = "..." })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Bulstat, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Bulstat, new { @class = "form-control", placeholder = "..." })

        </div>
    </div>
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" id="shd-have-btmmarg" class="btn btn-default" value="Редактиране" />
    </div>


    @Html.ActionLink("Връщане към начална страница", "Index", "Home", routeValues: null, htmlAttributes: new {@styles="background-color: none; border:0; text-decoration: none; margin-left:5%;"})


}