
@model IS.Web.ViewModels.ProfileViewModels.ProfileViewModel



<div class="container">
    <div class="row" id="back">
       @Styles.Render("~/Content/userProfile.css")
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">

            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">@Model.FirstName @Model.LastName</h3>
                </div>
                <div class="panel-body">
                    <a href="~/Views/BusinessProfile/Index.cshtml"></a>
                    <div class="row">
                        <div class="col-md-3 col-lg-3 " align="center"> @{ var base64 = Convert.ToBase64String(Model.Image);
                            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                            <img alt="User Pic" src=@imgSrc class="img-circle img-responsive"> }
                        </div>

                        <div class="col-md-9 col-lg-9">
                            <table class="table table-user-information">
                                <tbody>
                                    <tr>
                                        <td>Име:</td>
                                        <td>@Model.FirstName</td>
                                    </tr>
                                    <tr>
                                        <td>Фамилия:</td>
                                        <td>@Model.LastName</td>
                                    </tr>
                                    <tr>
                                        <td>Имейл</td>
                                        <td>@Model.Email</td>
                                    </tr>

                                    <tr>
                                    <tr>
                                        <td>Град</td>
                                        <td>@Model.Town</td>
                                    </tr>
                                </tbody>
                            </table>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    @Html.ActionLink("Редактиране", "Edit", "Profile", routeValues: null, htmlAttributes: new { @class = "btn btn-danger" })
                                    @Html.ActionLink("Изтриване", "Delete", "Profile", routeValues: null, htmlAttributes: new { @class = "btn btn-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
