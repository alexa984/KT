@model IS.Web.ViewModels.ServiceViewModels.ServiceViewModel
@{
    ViewBag.Title = "Добавяне на услуга";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("AddService", "Service", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>Добавяне на услуга.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
  
            <div class="form-group">
                @Html.LabelFor(s => s.Type, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(s => s.Type, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(s => s.Description, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(s => s.Description, new { @class = "form-control" })
                </div>
            </div>

        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Добавяне" />
        </div>

        }
